{
  "name": "backpack-docs",
  "version": "0.0.1",
  "description": "Backpack documentation site.",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:Skyscanner/backpack.git"
  },
  "author": "Backpack Design System <backpack@skyscanner.net>",
  "license": "Apache-2.0",
  "engines": {
    "node": "^12.13.0",
    "npm": "^6.12.0"
  },
  "scripts": {
    "preinstall": "npx ensure-node-env",
    "clean:dist": "rm -rf dist",
    "clean:node_modules": "rm -rf node_modules",
    "clean": "npm run clean:dist && npm run clean:node_modules && (cd backpack && npm run clean)",
    "lint:scss": "stylelint 'docs/**/*.scss' --syntax scss",
    "lint:scss:fix": "stylelint 'docs/**/*.scss' --syntax scss --fix",
    "lint:js": "eslint . --ext .js,.jsx",
    "lint:js:fix": "eslint . --ext .js,.jsx --fix",
    "lint": "npm run lint:js && npm run lint:scss",
    "flow": "flow",
    "flow-typed": "flow-typed",
    "generate-markdown-pages": "node scripts/build-process/generate-pages-from-markdown.js",
    "start": "npm run docs",
    "docs": "npm run submodules:pull && npm run build-backpack && npm run generate-markdown-pages && BPK_BUILT_AT=$( date -u +%s ) webpack-dev-server --open",
    "docs:dist": "npm run submodules:pull && npm run clean:dist && npm run build-backpack && npm run generate-markdown-pages && NODE_ENV=production BPK_BUILT_AT=$( date -u +%s ) webpack --progress --display=minimal --bail",
    "build-backpack": "(cd backpack && npm ci && npm run build && npm uninstall react react-dom @storybook/addon-actions)",
    "test": "npm run lint && npm run flow && npm run spellcheck && npm run jest",
    "jest": "jest",
    "jest:coverage": "jest --coverage",
    "jest:watch": "jest --watch",
    "danger": "danger ci",
    "prettier": "prettier --config .prettierrc --write \"**/*.js\"",
    "submodules:reset": "git checkout origin/main backpack-android backpack-ios backpack-react-native backpack && git submodule update --init --recursive",
    "submodules:pull": "git submodule foreach git pull origin main",
    "submodules:update": "npm run submodules:unlock && npm run submodules:pull && git add backpack-android backpack-ios backpack-react-native backpack && git commit -m\"[skip ci] Update submodules\" && npm run submodules:lock",
    "submodules:unlock": "sed 's/ignore = all/#ignore = all/g' .gitmodules > .gitmodules.tmp && mv .gitmodules.tmp .gitmodules",
    "submodules:lock": "sed 's/#ignore = all/ignore = all/g' .gitmodules > .gitmodules.tmp && mv .gitmodules.tmp .gitmodules",
    "spellcheck": "mdspell -r --en-gb --ignore-acronyms --ignore-numbers --no-suggestions '*.md' '**/*.md' '!**/node_modules/**/*.md' '!backpack/**/*.md' '!backpack-react-native/**/*.md' '!backpack-ios/**/*.md'  '!backpack-android/**/*.md'",
    "spellcheck:interactive": "mdspell --en-gb --ignore-acronyms --no-suggestions --ignore-numbers '*.md' '**/*.md' '!**/node_modules/**/*.md' '!backpack/**/*.md' '!backpack-react-native/**/*.md' '!backpack-ios/**/*.md'  '!backpack-android/**/*.md'",
    "update-bpk-dependencies": "npx npm-check-updates '/^bpk\\-(.*)$/' -u && npm i",
    "lighthouse": "babel-node scripts/lighthouse/lighthouse.js",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --syntax scss"
    ],
    "*.md": [
      "mdspell -r --en-gb --ignore-acronyms --ignore-numbers --no-suggestions"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/node": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-flow": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/register": "^7.16.0",
    "@github-docs/frontmatter": "^1.3.1",
    "@mdx-js/loader": "^1.6.21",
    "@mdx-js/react": "^1.6.21",
    "@skyscanner/bpk-foundations-android": "^2.0.0",
    "@skyscanner/bpk-foundations-ios": "^1.1.0",
    "@skyscanner/bpk-foundations-react-native": "^1.1.0",
    "@skyscanner/bpk-foundations-web": "^4.3.2",
    "@skyscanner/bpk-svgs": "^14.0.16",
    "autoprefixer": "^9.8.6",
    "babel-jest": "^26.5.2",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^4.0.0",
    "bpk-mixins": "29.0.0",
    "bpk-stylesheets": "7.1.31",
    "chalk": "^4.1.0",
    "colors": "^1.4.0",
    "copy-webpack-plugin": "^6.0.3",
    "css-loader": "^5.1.3",
    "danger": "^10.2.1",
    "date-fns": "^2.14.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.5.0",
    "es6-promise": "^4.2.8",
    "eslint-config-skyscanner": "^9.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-flowtype": "^4.5.3",
    "eslint_d": "^11.1.1",
    "file-loader": "^6.0.0",
    "flow-bin": "^0.135.0",
    "flow-typed": "^3.2.1",
    "fuse.js": "^6.4.1",
    "globby": "^11.0.1",
    "gray-matter": "^4.0.2",
    "husky": "^7.0.0",
    "jest": "^26.4.2",
    "js-yaml": "^3.14.0",
    "json-loader": "^0.5.4",
    "lighthouse": "^7.0.0",
    "lint-staged": "^10.2.11",
    "lodash": "^4.17.21",
    "markdown-spellcheck": "^1.3.1",
    "markdown-table": "^2.0.0",
    "mini-css-extract-plugin": "^1.0.0",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-loader": "^3.0.0",
    "prompt": "^1.0.0",
    "prop-types": "^15.5.10",
    "raf": "^3.4.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^5.2.0",
    "react-svg-loader": "^3.0.2",
    "react-test-renderer": "16.13.1",
    "remark-toc": "^7.0.0",
    "rimraf": "^3.0.0",
    "sass-loader": "^8.0.0",
    "semver": "^7.1.1",
    "snyk": "^1.361.3",
    "static-site-generator-webpack-plugin": "^3.4.2",
    "style-loader": "^2.0.0",
    "stylelint-config-skyscanner": "^4.0.0",
    "terser-webpack-plugin": "^4.1.0",
    "tinycolor2": "^1.4.1",
    "uglify-loader": "^3.0.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "zip-it-loader": "^0.3.0"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/scripts/jest/setup.js"
    ],
    "testRegex": "\\.test\\.js$",
    "transformIgnorePatterns": [
      "node_modules/(?!bpk)"
    ],
    "testPathIgnorePatterns": [
      "backpack-react-native/",
      "node_modules",
      "backpack/"
    ],
    "moduleNameMapper": {
      "react-transition-group/CSSTransition": "<rootDir>/scripts/stubs/cssTransitionStub.js",
      "^.+\\.s?css$": "<rootDir>/scripts/stubs/styleStub.js",
      ".(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga|md|pdf)$": "<rootDir>/scripts/stubs/fileStub.js"
    },
    "coverageThreshold": {
      "global": {
        "statements": 75,
        "branches": 70,
        "functions": 75,
        "lines": 75
      }
    }
  },
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie < 9"
  ],
  "dependencies": {
    "get-contrast-ratio": "^0.2.1"
  },
  "snyk": true
}
